.user-block {
  text-align: center;
  background-color: #8c41a2;
  padding: 28px 0;
}

.user-block .headimg {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: inline-block;
  overflow: hidden;
}

.user-block .headimg image {
  width: 100%;
  height: 100%;
}

.user-block .nick {
  color: #fff;
  font-size: 16px;
}

.btns {
  margin: 38px 15px;
  text-align: center;
}

.btns button {
  border-radius: 2px;
  background-color: #222;
  color: #fff;
  font-size: 16px;
  padding: 3px;
  width: 250px;
  margin-bottom: 9px;
}

.btns button::after {
  border: 0 none;
}

.btns text {
  color: #999;
  font-size: 13px;
}